	<package name="ajax" extends="default" namespace="/ajax">
		<action name="getNhanvienByEvent" class="ajaxAction" method="getNhanvienByEvent">
      		<result  name="success" type="json">
			   <param name="root">jsonData</param>
			 </result>
		</action>
	</package>
</struts>